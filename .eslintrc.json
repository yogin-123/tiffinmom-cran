{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "globals": {
        "messages": "readonly",
        "apiPath": "readonly",
        "constraints": "readonly"
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prefer-destructuring": [
            "error",
            {
                "object": true,
                "array": false
            }
        ],
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    }
}